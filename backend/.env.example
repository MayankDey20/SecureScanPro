# SecureScan Pro - Environment Configuration

# Application
APP_NAME=SecureScan Pro
APP_VERSION=1.0.0
ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
# DATABASE_URL=postgresql://user:password@localhost:5432/securescan
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=10

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Scanning Configuration
MAX_CONCURRENT_SCANS=10
SCAN_TIMEOUT=1800
MAX_SCAN_DEPTH=5
DEFAULT_USER_AGENT=SecureScan-Pro/1.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/securescan.log

# External Services
# CVE Database API
CVE_API_URL=https://cve.circl.lu/api
CVE_API_KEY=

# MITRE ATT&CK
MITRE_API_URL=https://attack.mitre.org/api

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@securescan.pro

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# File Storage
UPLOAD_DIR=./uploads
REPORT_DIR=./reports
MAX_UPLOAD_SIZE=10485760

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=securescan-reports

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_ML_ANALYSIS=False
ENABLE_API_DISCOVERY=True
ENABLE_COMPLIANCE_CHECK=True
ENABLE_NETWORK_SCAN=False

# Performance
CACHE_TTL=3600
BACKGROUND_TASK_QUEUE_SIZE=100

# Development
RELOAD=True
DEBUG_SQL=False
